{
	"manifest_version": 2,

	"name": "Simmer",
	"description": "Makes the internet a bit less annoying, I guess.",
	"version": "1.0.2",



	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},



	"permissions": [
		"activeTab", 
		"storage",
		"webRequest"
	],


	"content_scripts": [
   {
     "matches": [
     	"<all_urls>"
     ],
     "js": [
     	"DOMAlterScript.js"
     ]
   }
 ]

}	                                                                                  